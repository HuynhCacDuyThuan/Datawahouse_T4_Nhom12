package controller;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.text.SimpleDateFormat;
import java.util.Date;

import org.apache.poi.ss.usermodel.Cell;
import org.apache.poi.ss.usermodel.Row;
import org.apache.poi.ss.usermodel.Sheet;
import org.apache.poi.ss.usermodel.Workbook;
import org.apache.poi.ss.usermodel.WorkbookFactory;

public class ExcelParser {
	public static void main(String[] args) throws FileNotFoundException, IOException {
		Date currentDate = new Date();
        SimpleDateFormat sdf = new SimpleDateFormat("ddMMyyyy");
        String formattedDate = sdf.format(currentDate);
		
        Workbook workbook = WorkbookFactory.create(new File("data1.xlsx"));

        // Tạo sheet mới
        Sheet sheet = workbook.createSheet("Sheet1");

        // Tạo hàng đầu tiên
        Row row = sheet.createRow(0);

        // Tạo các ô trong hàng đầu tiên
        Cell cellA1 = row.createCell(0);
        Cell cellB1 = row.createCell(1);
        Cell cellC1 = row.createCell(2);

        // Đặt giá trị cho các ô trong hàng đầu tiên
        cellA1.setCellValue("a");
        cellB1.setCellValue("b");
        cellC1.setCellValue("c");

        // Tạo hàng thứ hai
        row = sheet.createRow(1);

        // Tạo các ô trong hàng thứ hai
        Cell cellA2 = row.createCell(0);
        Cell cellB2 = row.createCell(1);
        Cell cellC2 = row.createCell(2);

        // Đặt giá trị cho các ô trong hàng thứ hai
        cellA2.setCellValue("d");
        cellB2.setCellValue("e");
        cellC2.setCellValue("f");

        // Lưu workbook
        workbook.write(new FileOutputStream(new File("data1.xlsx")));
        workbook.close();
	}
}
